<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
    <servlet>
        <servlet-name>PageServlet</servlet-name>
        <servlet-class>servlet.PageServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>modifierpage</servlet-name>
        <jsp-file>/modifierpage.jsp</jsp-file>
    </servlet>
    <servlet>
        <servlet-name>listerpage</servlet-name>
        <jsp-file>/listerpage.jsp</jsp-file>
    </servlet>
    <servlet>
        <servlet-name>creerpage</servlet-name>
        <jsp-file>/creerpage.jsp</jsp-file>
    </servlet>
    <servlet>
        <servlet-name>rechercheAction</servlet-name>
        <jsp-file>/listerpage.jsp</jsp-file>
    </servlet>
    <servlet>
        <servlet-name>afficherPage</servlet-name>
        <servlet-class>servlet.afficherPage</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>menupage</servlet-name>
        <servlet-class>servlet.menupage</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>servlet.LoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ComptecreerServlet</servlet-name>
        <servlet-class>servlet.ComptecreerServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>PageServlet</servlet-name>
        <url-pattern>/lirepage</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>modifierpage</servlet-name>
        <url-pattern>/modifierpage</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>creerpage</servlet-name>
        <url-pattern>/creerpage</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>rechercheAction</servlet-name>
        <url-pattern>/recherche</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>listerpage</servlet-name>
        <url-pattern>/listerpage</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>afficherPage</servlet-name>
        <url-pattern>/afficherPage</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>menupage</servlet-name>
        <url-pattern>/menupage</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/Login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ComptecreerServlet</servlet-name>
        <url-pattern>/Comptecreer</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
        <welcome-file>index.xhtml</welcome-file>
    </welcome-file-list>
</web-app>
